<?xml version="1.0" encoding="utf-8"?>
<launch>
	<arg name="camera_id" default="0"/>
	<arg name="cam_image_width" default="1280"/>
	<arg name="cam_image_height" default="720"/>
	<arg name="rectify" default="true"/>

	<node pkg="usb_cam" type="usb_cam_node" name="camera$(arg camera_id)" output="screen" >
		<param name="video_device" value="/dev/camera$(arg camera_id)" />
		<param name="image_width" value="$(arg cam_image_width)" />
		<param name="image_height" value="$(arg cam_image_height)" />
		<param name="pixel_format" value="mjpeg" />
		<param name="camera_frame_id" value="camera$(arg camera_id)" />
		<param name="camera_name" value= "camera$(arg camera_id)"/>
		<param name="camera_info_url" value= "file:////home/roboterlabor/Documents/camera_system_robotics_lab/camera_calibration_files/camera$(arg camera_id)/camera$(arg camera_id)_1280x720.yaml"/>
		<param name="framerate" value="30" />
	</node>

	<group if="$(arg rectify)">
		<node ns="camera$(arg camera_id)" pkg="image_proc" type="image_proc" name="image_proc" />
	</group>
</launch>
